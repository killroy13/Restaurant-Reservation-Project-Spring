<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <!--CONTROLLERS-->
    <!--RestaurantReservation-->

    <servlet>
        <servlet-name>myServlet</servlet-name>
        <servlet-class>com.java.lesson.restaurant.reservation.controller.RestaurantReservation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>myServlet</servlet-name>
        <url-pattern>/myServlet</url-pattern>
    </servlet-mapping>
    
    
    
    
    <!--TEST CONTROLLER-->
    <!--Cookie controller counter-->
    <servlet>
        <servlet-name>cookieDemoController</servlet-name>
        <servlet-class>com.java.lesson.restaurant.reservation.notUse.CookieDemoController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cookieDemoController</servlet-name>
        <url-pattern>/cookieDemo.do</url-pattern>
    </servlet-mapping>
    <!--Session controller counter-->
    <servlet>
        <servlet-name>sessionDemoController</servlet-name>
        <servlet-class>com.java.lesson.restaurant.reservation.notUse.SessionDemoController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sessionDemoController</servlet-name>
        <url-pattern>/sessionDemo.do</url-pattern>
    </servlet-mapping>



    
    
    <!--<welcome-file-list>-->
        <!--<welcome-file>index.jsp</welcome-file>-->
    <!--</welcome-file-list>-->

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>


    <!-- FILTERS -->
    <!-- processing time -->
    <filter>
        <filter-name>timeFilter</filter-name>
        <filter-class>com.java.lesson.restaurant.reservation.filter.ProcessingTimeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>timeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- request info -->
    <filter>
        <filter-name>infoFilter</filter-name>
        <filter-class>com.java.lesson.restaurant.reservation.filter.RequestInfoFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>infoFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <!-- request info -->
    <filter>
        <filter-name>attributesToSessionFilter</filter-name>
        <filter-class>com.java.lesson.restaurant.reservation.filter.AddAttributesToSessionFilter</filter-class>
        <init-param>
            <param-name>filter-param-name-A</param-name>
            <param-value>filter-param-value-A</param-value>
        </init-param>
        <init-param>
            <param-name>filter-param-name-B</param-name>
            <param-value>filter-param-value-B</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>attributesToSessionFilter</filter-name>
        <servlet-name>myServlet</servlet-name>
    </filter-mapping>

    <!--LISTENERS-->
    <listener>
        <listener-class>com.java.lesson.restaurant.reservation.listener.MyHttpSessionActivationListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.java.lesson.restaurant.reservation.listener.MyServletContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.java.lesson.restaurant.reservation.listener.MyHttpSessionAttributeListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.java.lesson.restaurant.reservation.listener.MyHttpSessionBindingListener</listener-class>
    </listener>

    <listener>
        <listener-class>com.java.lesson.restaurant.reservation.listener.MyHttpSessionListener</listener-class>
    </listener>

    <listener>
        <listener-class>com.java.lesson.restaurant.reservation.listener.MyServletContextAttributeListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.java.lesson.restaurant.reservation.listener.MyServletRequestAttributeListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.java.lesson.restaurant.reservation.listener.MyServletRequestListener</listener-class>
    </listener>

    <!--ERROR-->
    <error-page>
        <error-code>404</error-code>
        <location>/error/error404.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error/error.jsp</location>
    </error-page>


</web-app>